@model WebApp.Models.UserModel

@{
    ViewData["Title"] = "Yeni Abone Oluştur";
}

 
<h4>Abone Oluştur</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NewUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Name" class="control-label">Abone İsmi</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
             
            <div class="form-group">
                <input type="submit" value="Abone Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}